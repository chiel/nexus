{
	"publishConfig": {
		"access": "public",
		"directory": "dist"
	},
	"name": "@chiel/nucleus",
	"version": "0.3.2",
	"main": "dist/nucleus",
	"bin": "dist/nucleus",
	"repository": {
		"type": "git",
		"url": "git@github.com:chiel/nexus.git",
		"directory": "packages/nucleus"
	},
	"scripts": {
		"build": "pnpm run clean && pnpm run compile && pnpm run copy",
		"clean": "rm -rf dist",
		"compile": "rollup -c",
		"copy": "pnpm run copy:configs && pnpm run copy:manifest",
		"copy:configs": "cp -R configs dist/configs",
		"copy:manifest": "jq '.main |= sub(\"dist/\";\"\") | .bin |= sub(\"dist/\";\"\")' package.json > dist/package.json",
		"lint": "eslint -c configs/eslint.js --ext .js,.ts,.tsx .",
		"start": "pnpm run clean && rollup -cw",
		"test": "jest -c configs/jest.js"
	},
	"dependencies": {
		"@typescript-eslint/eslint-plugin": "^5.29.0",
		"@typescript-eslint/parser": "^5.29.0",
		"chalk": "^4.1.2",
		"eslint": "^8.18.0",
		"eslint-plugin-jest": "^26.5.3",
		"eslint-plugin-react": "^7.30.1",
		"jest": "^28.1.1",
		"ts-jest": "^28.0.5",
		"typescript": "^4.7.3",
		"yargs": "^17.5.1"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^22.0.0",
		"@rollup/plugin-json": "^4.1.0",
		"@rollup/plugin-node-resolve": "^13.3.0",
		"@rollup/plugin-typescript": "^8.3.3",
		"@types/jest": "^28.1.3",
		"@types/node": "^18.0.0",
		"@types/yargs": "^17.0.10",
		"rollup": "^2.75.6",
		"tslib": "^2.4.0"
	}
}
